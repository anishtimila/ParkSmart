<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main4"
        tools:context="com.topa.techpark.student">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19sp"
        android:background="@android:color/holo_red_dark"
        android:padding="25dp"
        android:text="Student"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_commNorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:padding="20dp"
        android:text="Commuter North"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_commWest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_commNorth"
        android:layout_below="@+id/button_commNorth"
        android:layout_marginTop="37dp"
        android:padding="20dp"
        android:text="Commuter West"
        android:textSize="22sp"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satellite"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="20dp"
        android:id="@+id/button_satellite"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button_commWest"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
